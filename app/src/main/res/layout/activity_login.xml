<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.fayeed.nexus.Main.Login.Login"
    android:orientation="vertical">

    <ImageView
        app:srcCompat="@drawable/loginicon"
        android:id="@+id/loginicon"
        android:scaleType="fitXY"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="NEXUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subicon"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loginicon"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="220dp"
        android:id="@+id/signup">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/loginbackground"
            android:id="@+id/imageView14"
            android:scaleType="fitXY"
            android:layout_below="@+id/role_Id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:translationY="100dp" />

        <EditText
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/role_Id"
            android:hint="Role Id"
            android:layout_centerHorizontal="true"
            android:layout_width="320dp"
            android:visibility="visible"
            android:translationY="420dp"
            android:layout_below="@+id/institude_Id"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_textbox"
            android:textColor="@android:color/white"
            android:textColorHint="@color/cardview_light_background"
            android:text="03" />

        <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/institude_Id"
            android:background="@drawable/background_textbox"
            android:layout_height="50dp"
            android:layout_width="320dp"
            android:layout_centerHorizontal="true"
            android:hint="Institude Id"
            android:visibility="visible"
            android:translationY="400dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textColorHint="@color/cardview_light_background"
            android:text="01" />

    </FrameLayout>

    <ImageButton
        app:srcCompat="@drawable/signin"
        android:id="@+id/login"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:translationY="0dp"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:visibility="visible"
        android:layout_marginBottom="20dp"
        android:paddingBottom="0dp"
        android:layout_alignBottom="@+id/login_button"
        android:layout_above="@+id/register" />

    <ImageButton
        app:srcCompat="@drawable/getstarted"
        android:id="@+id/register"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <!--<EditText
