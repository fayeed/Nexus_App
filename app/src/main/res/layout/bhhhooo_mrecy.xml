<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:background="@color/cardview_light_background"
    android:layout_marginBottom="10dp">

    <!--<ImageView
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/propic1"
        android:layout_width="60dp"
        android:layout_height="60dp" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="2dp"
            app:civ_shadow="false"
            android:id="@+id/chat_main_all_image"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/chat_main_all_image"
            android:layout_toEndOf="@+id/chat_main_all_image"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="10dp"
            android:id="@+id/name1"
            android:textSize="12sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="normal|bold"
            android:layout_marginTop="10dp" />

        <ImageView
            app:srcCompat="@drawable/settings"
            android:id="@+id/imageView36"
            android:layout_alignParentEnd="true"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:layout_marginStart="10dp"
        android:paddingBottom="0dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:srcCompat="@drawable/rectangle_grey"
            android:id="@+id/imageView37"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/content2"
            android:textSize="11sp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:layout_marginBottom="5dp">

        <ImageButton
            app:srcCompat="@drawable/views_g"
            android:id="@+id/imageButton2"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_width="20dp"
            android:layout_marginStart="10dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view"
            android:layout_toEndOf="@+id/imageButton2"
            android:layout_marginStart="8dp" />

        <ImageButton
            app:srcCompat="@drawable/comments_g"
            android:id="@+id/imageButton3"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_toEndOf="@+id/view"
            android:layout_marginStart="30dp"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:text="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comments"
            android:layout_toEndOf="@+id/imageButton3"
            android:layout_marginStart="8dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timest"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="0dp"
            android:layout_marginTop="5dp"
            android:textSize="8sp"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:gravity="end" />

    </RelativeLayout>


</LinearLayout>
