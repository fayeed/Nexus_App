<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#FFFFFF"
    tools:context="com.example.fayeed.nexus.Main.Main"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/fragement_container"
            android:layout_height="560dp"/>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/pager"
            android:paddingBottom="0dp"
            android:layout_height="570dp"
            android:layout_above="@+id/imageView31">

        </android.support.v4.view.ViewPager>

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@color/colorPrimary"
            android:id="@+id/imageView31"
            android:layout_alignParentBottom="true"
            android:layout_height="48dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottombar"
            android:layout_alignParentLeft="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/middle"
                android:id="@+id/imageView2"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:layout_height="80dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="30dp">

                <ImageButton
                    app:srcCompat="@drawable/bhhooo_icon"
                    android:id="@+id/bhhhooo"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_marginTop="13dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <ImageButton
                    app:srcCompat="@drawable/discussion_icon"
                    android:id="@+id/chat"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <ImageButton
                    app:srcCompat="@drawable/profile_icon"
                    android:id="@+id/profile"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp" />

                <ImageButton
                    app:srcCompat="@drawable/news_icon"
                    android:id="@+id/news"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <ImageButton
                    app:srcCompat="@drawable/chat_icon"
                    android:id="@+id/discussionthread"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="@null"
                    android:layout_marginTop="13dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <!--<Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="74dp"
                    android:id="@+id/editprofile"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="editProfile_B"
                    android:layout_weight="1" />-->

            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>
