<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bhhooo__m"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@color/app_b"
    tools:context="com.example.fayeed.nexus.Main.BHHHOOO.BHHOOO_Main"
    android:padding="0dp"
    android:orientation="vertical"
    android:paddingEnd="0dp"
    android:paddingStart="0dp">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/bg_1"
        android:id="@+id/imageView30"
        android:scaleType="fitXY"
        android:layout_height="56dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".01">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/bg_1"
            android:id="@+id/imageView9"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_height="58dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="BHHHOOO!!!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BHHHOOO"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:textColor="@color/cardview_light_background"
                android:layout_marginTop="12dp"
                android:layout_marginStart="20dp" />

            <ImageButton
                app:srcCompat="@drawable/bhhooo_icon_white"
                android:id="@+id/bhhoopost"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_weight=".01"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_width="30dp"
                android:layout_height="25dp" />
        </LinearLayout>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bhhhooo_m"
        android:layout_weight="1"
        android:layout_below="@+id/imageView30" />

</RelativeLayout>

